<!DOCTYPE html>
<html>
  <head>
    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Dashboard | Roroa CMS</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- jQuery UI -->
    <link rel="stylesheet" type="text/css" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,900,300italic,400italic,600italic,700italic,900italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>

    <%= stylesheet_link_tag "admin/application", :media => "all" %>
    <%= javascript_include_tag 'admin/application' %>

    <%= csrf_meta_tags %>

  </head>
      <section id="container">
        <header id="header">
            <!--logo start-->
            <div class="brand">
                <a href="index.html" class="logo"><span>Roroa</span>cms</a>
            </div>
            <!--logo end-->
            <div class="toggle-navigation toggle-left">
                <button type="button" class="btn btn-default" id="toggle-left">
                    <i class="fa fa-bars"></i>
                </button>
            </div>

            <div class="user-nav">
                <ul>
                    <% if Setting.get('article_comment_type') == 'R' && Setting.get('article_comments') == 'Y' && latest_comments(nil).count > 0 %>
                      <li class="dropdown messages">
                          <span class="badge badge-danager animated bounceIn" id="new-messages"><%= latest_comments(nil).count %></span>
                          <button type="button" class="btn btn-default dropdown-toggle options" id="toggle-mail" data-toggle="dropdown">
                              <i class="fa fa-comment"></i>
                              
                          </button>
                          <ul class="dropdown-menu alert animated fadeInDown">
                              <li>
                                  <h1>The <strong><%= latest_comments.count %></strong> latest new comments to be reviewed</h1>
                              </li>
                              <% latest_comments.each do |comment| %>
                                <li>
                                    <%= link_to edit_admin_comment_path(comment) do %>
                                        <div class="message-info">
                                            <span class="sender"><%= comment.author %></span>
                                            <span class="time"><%= time_ago_in_words(comment.submitted_on) %></span>
                                            <div class="message-content"><%= excerpt(comment.comment, 50) %></div>
                                        </div>
                                    <% end %>
                                </li>
                              <% end %>
                              <li>
                                <%= link_to admin_comments_path do %>
                                  View all comments <i class="fa fa-angle-right"></i>
                                <% end %>
                              </li>
                          </ul>
                      </li>
                    <% end %>
                    <li class="profile-photo">
                        <%= image_tag("admin/avatar.png", :class => 'img-circle') %>
                    </li>
                    <li class="dropdown settings">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                      <%= current_user.first_name + ' ' + current_user.last_name %> <i class="fa fa-angle-down"></i>
                    </a>
                        <ul class="dropdown-menu animated fadeInDown">
                            <li>
                              <%= link_to edit_admin_administrator_path(session[:admin_id]) do %>
                                <i class="fa fa-user"></i> Profile
                              <% end %>
                            </li>
                            <li>
                              <%= link_to admin_logout_path do %>
                                <i class="fa fa-power-off"></i> Logout
                              <% end %>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </header>
        <!--sidebar left start-->
        <aside class="sidebar">
            <div id="leftside-navigation" class="nano">
                <ul class="nano-content">
                    <li class="active">
                      <%= link_to admin_path do %>
                        <i class="fa fa-dashboard"></i><span>Dashboard</span>
                      <% end %>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:void(0);"><i class="fa fa-file"></i><span>Content</span><i class="arrow fa fa-angle-right pull-right"></i></a>
                        <ul>
                          <li><%= link_to 'Pages', admin_pages_path %></li>
                          <li><%= link_to 'Add New Page', new_admin_page_path %></li>
                          <li class="divider"></li>
                          <li><%= link_to 'Articles', admin_posts_path %></li>
                          <li><%= link_to 'Add New Article', new_admin_post_path %></li>
                          <li><%= link_to 'Categories', admin_post_categories_path %></li>
                          <li><%= link_to 'Tags', admin_post_tags_path %></li>
                          <li class="divider"></li>
                          <li><%= link_to 'Banners', admin_banners_path %></li>
                          <li><%= link_to 'Add New Banner', new_admin_banner_path %></li>
                          <li><%= link_to 'Banner Categories', categories_admin_banners_path %></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:void(0);"><i class="fa fa-user"></i><span>Users</span><i class="arrow fa fa-angle-right pull-right"></i></a>
                        <ul>
                          <li><%= link_to 'Profile', edit_admin_administrator_path(session[:admin_id]) %></li>
                          <% if current_user.access_level == 'admin' %>
                              <li class="divider"></li>
                              <li><%= link_to 'Users', admin_administrators_path %></li>
                              <li><%= link_to 'Add New User', new_admin_administrator_path %></li>
                          <% end %>
                        </ul>
                    </li>
                    <li>
                      <%= link_to admin_menus_path do %>
                        <i class="fa fa-list"></i><span>Menus</span>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to admin_media_path do %>
                        <i class="fa fa-cloud"></i><span>Media</span>
                      <% end %>
                    </li>
                    <% if Setting.find_by_setting_name('article_comment_type')[:setting] == 'R' && Setting.find_by_setting_name('article_comments')[:setting] == 'Y' %>
                       <li>
                        <%= link_to admin_comments_path do %>
                          <i class="fa fa-comments"></i><span>Comments</span>
                        <% end %>
                      </li>
                    <% end %>
                    <li>
                      <%= link_to admin_themes_path do %>
                        <i class="fa fa-flask"></i><span>Themes</span>
                      <% end %>
                    </li>
                    <% if current_user.access_level == "admin" %>

                      <li>
                        <%= link_to admin_settings_general_index_path do %>
                          <i class="fa fa-cogs"></i><span>Settings</span>
                        <% end %>
                      </li>

                    <% end %>

                    <% if current_user.access_level == "admin" %>

                        <li>
                          <%= link_to admin_trash_index_path do %>
                            <i class="fa fa-trash-o"></i><span>Trash</span>
                          <% end %>
                        </li>
                      
                    <% end %>

                    <li>
                      <%= link_to admin_logout_path do %>
                        <i class="fa fa-sign-out"></i><span>Logout</span>
                      <% end %>
                    </li>

                </ul>
            </div>

        </aside>
        <!--sidebar left end-->
        <!--main content start-->
        <section class="main-content-wrapper">
            <section id="main-content">
                <%= theme_exists %>
                <%= get_notifications %>
                <%= yield %>
               
            </section>
        </section>
        <!--main content end-->
    </section>
</html>