<div class="row">

	<div class="col-md-12">

		<%= link_to new_admin_administrator_path do %>
		<button class="pull-right btn btn-small btn-primary"><span class="fa fa-plus"></span>&nbsp;<%= I18n.t("views.admin.administrators.index.add_new_user") %></button>
		<% end %>

	</div>

</div>

<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">&nbsp;</h3>
				<div class="actions pull-right">
					<i class="fa fa-chevron-down"></i>
				</div>
			</div>
			<div class="panel-body">
				<table id="dtable" class="table table-striped table-bordered" cellspacing="0" width="100%">
					<thead>
						<tr>
							<th><%= I18n.t("views.admin.administrators.index.name") %></th>
							<th class="hidden-xs"><%= I18n.t("views.admin.administrators.index.email_address") %></th>
							<th>&nbsp;</th>
						</tr>
					</thead>

					<tbody>
						<% Admin.all.each do |admin| %>
						<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

							<td>
								<img src="<%= admin.avatar %>" class="img-circle hidden-xs" width="35">&nbsp;
								<%= admin.first_name + " " + admin.last_name %>
							</td>
							<td class="hidden-xs"><%= admin.email %></td>
							<td class="center">
								<% if admin.overlord != 'Y' || (admin.id.to_i == session[:admin_id].to_i) %>       
								<%= link_to edit_admin_administrator_path(admin), :class => '' do %>
								<i class="fa fa-pencil"></i>
								<% end %> 
								<%= link_to admin_administrator_path(admin), method: :delete, data: { confirm: I18n.t("views.admin.administrators.index.confirm") }, :class => '' do %>
								<i class="fa fa-trash-o"></i>
								<% end %>
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>

			</div>
		</div>
	</div>
</div>