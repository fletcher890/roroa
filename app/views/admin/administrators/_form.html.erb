<%= form_for @admin, :url => url_for(:controller => 'administrators', :action => @action) do |f| %>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="tab-wrapper tab-left ">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#general" data-toggle="tab"><i class="fa fa-user"></i> Profile</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="general">

          <% if !@admin.id.blank? %>

            <div class="well wellBackground" style="background-image: url('<%= @admin.cover_picture %>');">
              <center>
                <img src="<%= @admin.avatar %>" name="aboutme" width="140" height="140" class="img-circle">
                <h3><%= @admin.username %></h3>
                <small><%= @admin.first_name + ' ' + @admin.last_name %></small>
              </center>

              <% if @admin.cover_picture.blank? %>

                <a class="btn btn-xs btn-primary pull-right addProfileImage" href="javascript:;"><span class="fa fa-picture-o"></span> Change cover</a>
                <a class="btn btn-xs btn-danger pull-right removeProfileImage hidden" href="javascript:;"><span class="fa fa-trash-o"></span> Remove cover</a>

              <% else %>

                <a class="btn btn-xs btn-primary pull-right addProfileImage hidden" href="javascript:;"><span class="fa fa-picture-o"></span> Change cover</a>
                <a class="btn btn-xs btn-danger pull-right removeProfileImage" href="javascript:;"><span class="fa fa-trash-o"></span> Remove cover</a>

              <% end %>

              <%= hidden_field_tag :has_cover_image, @admin.cover_picture.to_s  %>

              <%= f.file_field :cover_picture, :class => "" %>
            </div>

          <% else %>

            <div class="well wellBackground">
              <center>
                <img src="https://s3.amazonaws.com/roroa/default-user-icon-profile.png" name="aboutme" width="140" height="140" class="img-circle">
              </center>
              <a style="margin:10px;" class="btn btn-xs btn-primary pull-right addProfileImage" href="javascript:;"><span class="fa fa-picture-o"></span> Change cover</a>
              <a class="btn btn-xs btn-danger pull-right removeProfileImage hidden" href="javascript:;"><span class="fa fa-trash-o"></span> Remove cover</a>
              <%= hidden_field_tag :has_cover_image, ""  %>
              <%= f.file_field :cover_picture, :class => "" %>
            </div>

          <% end %>

          <div class="form-group">
            <%= f.label :first_name, :class => "col-sm-3 control-label"  %>
            <div class="col-sm-6">
              <%= f.text_field :first_name, size: 40, :class => "form-control" %>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="form-group">
            <%= f.label :last_name, :class => "col-sm-3 control-label"  %>
            <div class="col-sm-6">
              <%= f.text_field :last_name, size: 40, :class => "form-control" %>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="form-group">
            <%= f.label :email, :class => "col-sm-3 control-label"  %>
            <div class="col-sm-6">
              <%= f.text_field :email, size: 40, :class => "form-control" %>
              <%= errors_for @admin, :email %>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="form-group">
            <%= f.label :username, :class => "col-sm-3 control-label"  %>
            <div class="col-sm-6">
              <%= f.text_field :username, size: 40, :class => "form-control" %>
              <%= errors_for @admin, :username %>
            </div>
            <div class="clearfix"></div>
          </div>

          <div class="form-group">
            <%= f.label 'Profile Picture', :class => "col-sm-3 control-label"  %>
            <div class="col-sm-6">
              <%= f.file_field :avatar, :class => "" %>
            </div>
            <div class="clearfix"></div>
          </div>


          <% if is_overlord? || @admin.id == nil %>

          <div class="form-group">
            <%= f.label :access_level, :class => "col-sm-3 control-label"  %>
            <div class="col-sm-6">
              <%= f.select :access_level, Admin::ACCESS_LEVELS,  { prompt: 'Select access level' }, { :class => "form-control" } %>

            </div>
            <div class="clearfix"></div>
          </div>

          <% end %>
          <div class="form-group">
            <%= f.label :description, 'Author Description', :class => "col-sm-3 control-label"  %>
            <div class="col-sm-6">
              <%= f.text_area :description, :class => "form-control" %>
            </div>
            <div class="clearfix"></div>
          </div>

          <div class="form-group">
            <%= f.label :password, :class => "col-sm-3 control-label"  %>
            <div class="col-sm-6">
              <%= f.password_field :password, :class => "form-control" %>
              <%= errors_for @admin, :password %>
            </div>
            <div class="clearfix"></div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, :class => "col-sm-3 control-label"  %>
            <div class="col-sm-6">
              <%= f.password_field :password_confirmation, :class => "form-control" %>
              <%= errors_for @admin, :password_confirmation %>
            </div>
            <div class="clearfix"></div>
          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label">&nbsp;</label>
            <div class="col-sm-6">
              <%= submit_tag "Save", :class => 'btn btn-small btn-primary' %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  

  
</script>