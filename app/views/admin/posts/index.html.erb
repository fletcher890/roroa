<div class="row-fluid">
  <div class="span12">
        

<h2 class="title">Articles</h2>

<div class="well">

  <%= link_to new_admin_post_path do %>
    <button class="pull-right btn btn-small btn-success"><span class="icon-plus"></span>&nbsp;Add New Article</button>
  <% end %>

  <div class="input-append pull-left">
  <%= form_tag admin_posts_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil, :class => 'btn' %>
    </p>
  <% end %>
  </div>
</div>

<%= form_tag "/admin/posts/bulk_update" do %>
  <table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th><%= check_box_tag 'all', 'all', false, :id => 'check_all' %></th>
      <th>Post Title</th>
      <th>Published Date</th>
      <th>Action</th>
    </tr>
  </thead>
  <% @posts.each do |post| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %> <%= post.post_status == "Draft" ? 'draft' : '' %>">

    <td><%= check_box_tag 'posts[]', post.id %></td>
  	<td><%= post.post_title %><%= post.post_status == "Draft" ? ' - draft' : '' %></td>
  	<td><%= post.post_date.strftime "%d-%m-%Y" %></td>
      <td>
        <div class="btn-group">
          <%= link_to edit_admin_post_path(post), :class => 'btn' do %>
            <i class="icon-pencil"></i>
          <% end %>        
          <%= link_to page_path(post), :class => 'btn' do %>
            <i class="icon-search"></i>
          <% end %>        
          <%= link_to admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' do %>
            <i class="icon-trash"></i>
          <% end %>
        </div>
      </td>

      <% if !post.child.blank? %>
       <% @p = post.child
          @level = "<i class=\"icon-minus\"></i>"
        %>
       <%= render 'posts_table' %>
      <% end %>
    </tr>
  <% end %>
  </table>
  <%= select_tag "to_do", "<option>Publish</option><option>Draft</option><option>Move To Trash</option>".html_safe, prompt: 'Bulk Action', :class => 'span2' %>
  <%= submit_tag 'Submit', :class => "btn" %>
<% end %>
</div>
</div>

<script type='text/javascript'>
    $('#check_all').on("click", function(){ $('td input[type="checkbox"]').click(); });
</script>
