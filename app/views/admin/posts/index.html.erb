<div class="row">

  <div class="col-md-12">

    <%= link_to new_admin_post_path do %>
    <button class="pull-right btn btn-small btn-primary"><span class="fa fa-plus"></span>&nbsp;Add New Article</button>
    <% end %>

  </div>

</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">&nbsp;</h3>
        <div class="actions pull-right">
          <i class="fa fa-chevron-down"></i>
        </div>
      </div>
      <div class="panel-body">
        <% if @posts.blank? %>
          <div class="col-md-12" style="text-align:center;">
            <span style="margin-top:100px; margin-bottom:100px; font-size:25px; display:block; ">You currently have no articles</span>
          </div>

        <% else %>

          <%= render 'admin/partials/articles_table' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
