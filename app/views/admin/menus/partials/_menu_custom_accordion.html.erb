<div class="panel panel-default">
    <div class="panel-heading">
    	<h3 class="panel-title"><i class='fa fa-external-link pull-left'></i>&nbsp;Custom Link</h3>
		<div class="actions pull-right">
			<i class="fa fa-chevron-down"></i>
		</div>
    </div>
    <div class="panel-body">

    	<form action='' method='post' data-type='custom'>
	    	<input type='hidden' name='type' value='custom' />
	    	<div class="form-group">
	    		<input type='text' name='customlink' placeholder='http://...' class="form-control" />
	    	</div>
	    	<div class="form-group">
	    		<input name='label' type='text' placeholder='Label' class="form-control">
	    	</div>
	    	<div class="form-group">
				<input name='class' type='text' placeholder='Class' class="form-control">
			</div>
			<label>Target</label>
			<div class="form-group">
				<div class="radio-inline">
					<input type="radio" value="sw" name="target" checked="checked">Same Window
				</div>
				<div class="radio-inline">
					<input type="radio" value="nt" name="target">New Tab
				</div>
			</div>

			<div class='formSepUpp'>
				<button type='submit' class='btn btn-sm btn-primary pull-left'> 
				    <i class='fa fa-plus'></i>&nbsp; Add Link
				  </button>
			</div>
	   	</form>

    </div>
</div>