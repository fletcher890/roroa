<div class='itemInformation'>

	<form action='' method='post' data-type='custom'>
		<div class="row">
			<div class='col-md-6'>
				<label>Options</label><br />


				<input type="hidden" name="linkto" value="<%= params[:linkto] %>" />
				<input type="hidden" name="type" value="<%= params[:type] %>" />

				<% if params[:customlink] %>
					<div class="form-group">
						<input name='customlink' type='text' placeholder='http://...' value='<%= params[:customlink] %>' class="form-control">
					</div>
				<% end %>

				<div class="form-group">
		    		<input name='label' type='text' placeholder='Label' value='<%= params[:label] %>' class="form-control">
		    	</div>

				<div class="form-group">
					<input name='class' type='text' placeholder='Class' value='<%= params[:class] %>' class="form-control">
				</div>

			</div>


			<div class='col-md-6'>
				<label>Target</label><br />
				<div class="form-group">
					<div class="radio-inline">
						<input name='target' type='radio' value='sw' <%= check_for_checked("sw", params['target'].to_s) %>>Same Window
					</div>
					<div class="radio-inline">
						<input name='target' type='radio' value='nt' <%=  check_for_checked("nt", params['target'].to_s) %>>New Tab
					</div>
				</div>
			</div>
		</div>
		<div class='clearfix'></div>
		<hr>
		<div class='btn-group pull-right'>
			<a class='btn btn-sm btn-default submitForm'><i class='fa fa-refresh'></i>&nbsp;Update</a>
			<a class='btn btn-danger btn-sm deleteOption'><i class='fa fa-trash-o'></i>&nbsp;Remove</a>
		</div>
		<div class="clearfix"></div>
   	</form>

</div>