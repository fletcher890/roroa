<div class='item-information'>

  <form action='' method='post' data-type='custom'>
    <div class="">
      <div class='col-md-6'>
        <label><%= t("views.admin.menus.partials.menu_dropdown.options") %></label><br />


        <input type="hidden" name="linkto" value="<%= params[:linkto] %>" />
        <input type="hidden" name="type" value="<%= params[:type] %>" />

        <% if params[:customlink] %>
          <div class="form-group">
            <input name='customlink' type='text' placeholder='<%= t("views.admin.menus.partials.menu_dropdown.placeholder_1") %>' value='<%= params[:customlink] %>' class="form-control">
          </div>
        <% end %>

        <div class="form-group">
            <input name='label' type='text' placeholder='<%= t("views.admin.menus.partials.menu_dropdown.placeholder_2") %>' value='<%= params[:label] %>' class="form-control">
          </div>

        <div class="form-group">
          <input name='class' type='text' placeholder='<%= t("views.admin.menus.partials.menu_dropdown.placeholder_3") %>' value='<%= params[:class] %>' class="form-control">
        </div>

      </div>


      <div class='col-md-6'>
        <label><%= t("views.admin.generic.target") %></label><br />
        <div class="form-group">
          <div class="radio-inline">
            <input name='target' type='radio' value='sw' <%= check_for_checked("sw", params['target'].to_s) %>><%= t("views.admin.menus.generic.same_window") %>
          </div>
          <div class="radio-inline">
            <input name='target' type='radio' value='nt' <%=  check_for_checked("nt", params['target'].to_s) %>><%= t("views.admin.menus.generic.same_window") %>
          </div>
        </div>
      </div>
    </div>
    <div class='clearfix'></div>
    <hr>
    <div class='btn-group pull-right'>
      <a class='btn btn-sm btn-default submit-form'><i class='fa fa-refresh'></i>&nbsp;<%= t("views.admin.generic.update") %></a>
      <a class='btn btn-danger btn-sm delete-option'><i class='fa fa-trash-o'></i>&nbsp;<%= t("views.admin.menus.generic.remove") %></a>
    </div>
    <div class="clearfix"></div>
  </form>

</div>