<li data-type='<%= @option.data_type %>' data-id='option_<%= @option.option_id %>' data-data='<%= @option.custom_data %>' style='' class='dd-item'>
	
	<div class="dd-handle"><span class="list-name-option"><%= @name %></span><i class='fa fa-plus pull-right handler'></i></div>
	
	<div class='item-information'>

		<form action='' method='post' data-type='custom'>
			<div class="">
				<div class='col-md-6'>
					<label><%= I18n.t("views.admin.menus.partials.menu_dropdown.options") %></label><br />


					<input type="hidden" name="linkto" value="<%= @existingData['linkto'].to_s %>" />
					<input type="hidden" name="type" value="<%= @existingData['type'].to_s %>" />

					<% if @existingData['type'].to_s == 'custom' %>
						<div class="form-group">
							<input name='customlink' type='text' placeholder='<%= I18n.t("views.admin.menus.partials.menu_dropdown.placeholder_1") %>' value=' <%= @existingData['customlink'] %>' class="form-control">
						</div>
					<% end %>

					<div class="form-group">
			    		<input name='label' type='text' placeholder='<%= I18n.t("views.admin.menus.partials.menu_dropdown.placeholder_2") %>' value='<%= @existingData['label'].html_safe %>' class="form-control">
			    	</div>

					<div class="form-group">
						<input name='class' type='text' placeholder='<%= I18n.t("views.admin.menus.partials.menu_dropdown.placeholder_3") %>' value='<%= @existingData['class'].to_s %>' class="form-control">
					</div>

				</div>


				<div class='col-md-6'>
					<label><%= I18n.t("views.admin.menus.generic.target") %></label><br />
					<div class="form-group">
						<div class="radio-inline">

							<input name='target' type='radio' value='sw' <%= check_for_checked("sw", @existingData['target'].to_s) %>><%= I18n.t("views.admin.menus.generic.same_window") %>
						</div>
						<div class="radio-inline">
							<input name='target' type='radio' value='nt' <%=  check_for_checked("nt", @existingData['target'].to_s) %>><%= I18n.t("views.admin.menus.generic.new_tab") %>
						</div>
					</div>
				</div>
			</div>
			<div class='clearfix'></div>
			<hr>
			<div class='btn-group pull-right'>
				<a class='btn btn-sm btn-default submit-form'><i class='fa fa-refresh'></i>&nbsp;<%= I18n.t("views.admin.menus.generic.update") %></a>
				<a class='btn btn-danger btn-sm delete-option'><i class='fa fa-trash-o'></i>&nbsp;<%= I18n.t("views.admin.menus.generic.remove") %></a>
			</div>
			<div class="clearfix"></div>
	   	</form>


	</div>

	<% if descendants_count(@option) > 0 %>

		<ol class='sub dd-list'>
			<%= menu_list_loop @option.id, true %>
		</ol>

	<% end %>

</li>