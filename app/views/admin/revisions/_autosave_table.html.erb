<% if @revisions.length > 0 %>
	<table class="table table-condensed table-striped">
		<thead>

			<th>Date Created</th>
			<th>Author</th>
			<th>Action</th>

		</thead>
		<% @revisions.each do |d| %>
		<tr <%= d.id == @revision['revision'].id ? 'class="success"' : '' %>>
			<td>Revision saved at <%= d.created_at.strftime "%d %B, %Y at %H:%M" %></td>
			<td>Simon Fletcher</td>
			<td>
				<div class="btn-group">
		          <%= link_to restore_admin_revision_path(d), :class => 'btn' do %>
		            <i class="icon-magic"></i>
		          <% end %>        
		          <%= link_to edit_admin_revision_path(d), :class => 'btn' do %>
		            <i class="icon-search"></i>
		          <% end %>
		        </div>
			</td>
		</tr>
		<% end %>

	</table>
<% else %>
	
	<p>This is the only revision for this revision</p>
	
<% end %>