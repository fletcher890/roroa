<% 
revisions = Post.where(:ancestry => @post.ancestry, :post_type => 'autosave').order('created_at desc')
if revisions.length > 0 %>
	<table class="table table-hover">
		<thead>

			<th>Date Created</th>
			<th>Author</th>
			<th>&nbsp;</th>

		</thead>
		<% revisions.each do |d| %>
		<tr <%= d.id == @revision['revision'].id ? 'class=active' : '' %>>
			<td>Revision saved at <%= d.created_at.strftime "%d %B, %Y at %H:%M" %></td>
			<td><%= (d.post_status.downcase == 'user-autosave' || d.post_type.downcase == 'page') ? d.admin.username : 'system' %></td>
			<td>
				<div class="btn-group pull-right">
		          <%= link_to restore_admin_revision_path(d), :class => 'btn btn-default btn-xs' do %>
		            <i class="fa fa-magic"></i>
		          <% end %>        
		          <%= link_to edit_admin_revision_path(d), :class => 'btn btn-default btn-xs' do %>
		            <i class="fa fa-search"></i>
		          <% end %>
		        </div>
			</td>
		</tr>
		<% end %>

	</table>
<% else %>
	
	<p>This is the only revision for this post</p>
	
<% end %>