<div class="row-fluid">
  <div class="span12">
<h2 class="title">Banners</h2>

<div class="well">

  <div class="input-append span6">
    <%= form_tag admin_banners_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search], :placeholder => "Search..." %>
        <%= submit_tag "Search", :name => nil, :class => 'btn btn-small btn-warning' %> 
    <% end %>
    </div>
  <div class="span6">
    <%= link_to new_admin_banner_path do %>
      <button class="pull-right btn btn-small btn-warning"><span class="icon-plus"></span>&nbsp;Add New Banner</button>
    <% end %>
  </div>

</div>

<% if @banners.blank? %>
  <div class="span12" style="text-align:center;">
    <strong style="margin-top:100px; font-size:25px; display:block; ">You currently have no banners</strong>
  </div>

<% else %>

  <%= form_tag site_url("admin/banners/bulk_update") do %>
    <table class="table table-bordered table-striped table_vam">
    <thead>
      <tr>
        <th><%= check_box_tag 'all', 'all', false, :id => 'check_all' %></th>
        <th>Banner Name</th>
        <th>Image</th>
        <th>Category</th>
        <th>Action</th>
      </tr>
    </thead>
    <% @banners.each do |banner| %>
      <tr>

      <td><%= check_box_tag 'banners[]', banner.id %></td>
    	<td><span class="hhfr">Banner Name:-</span><%= banner.name %></td>
    	<td class="image"><span class="hhfr">Image:-</span><img src="<%= banner.image %>" width="100"/></td>
    	<td>
    		<span class="hhfr">Category:-</span>
    		<%= banner.terms.all.collect {|u| u.name}.join ', ' %>
    	</td>
        <td>
          <div class="btn-group">
            <%= link_to edit_admin_banner_path(banner), :class => 'btn btn-small' do %>
              <i class="icon-pencil"></i>
            <% end %>              
            <%= link_to admin_banner_path(banner), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small' do %>
              <i class="icon-trash"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
    </table>
  <%= bulk_update_dropdown Hash['move_to_trash' => 'Move To Trash'] %>
  <% end %>
<% end %>

<div class="pull-right">
   <%= paginate @banners %>
</div>


</div>
</div>