<div class="row">
  <div class="col-md-12">
    <!--breadcrumbs start -->
    <ul class="breadcrumb">
      <li><a href="#">Dashboard</a>
      </li>
      <li class="active">Banners</li>
    </ul>
  </div>
</div>

<div class="row">

  <div class="col-md-6">
    <h1 class="h1">Banners</h1>
  </div>

  <div class="col-md-6">

    <%= link_to new_admin_banner_path do %>
    <button class="pull-right btn btn-small btn-primary"><span class="fa fa-plus"></span>&nbsp;Add New Banner</button>
    <% end %>

  </div>

</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">&nbsp;</h3>
        <div class="actions pull-right">
          <i class="fa fa-chevron-down"></i>
        </div>
      </div>
      <div class="panel-body">
        <% if @banners.blank? %>
          <div class="col-md-12" style="text-align:center;">
            <span style="margin-top:100px; margin-bottom:100px; font-size:25px; display:block; ">You currently have no banners</span>
          </div>

        <% else %>

          <%= render 'admin/partials/banners_table' %>

        <% end %>
      </div>
    </div>
  </div>
</div>


