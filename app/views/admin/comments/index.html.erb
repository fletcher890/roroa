<div class="row">
    <div class="col-md-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a href="#">Dashboard</a>
            </li>
            <li class="active">Comments</li>
        </ul>
        <!--breadcrumbs end -->
       <h1 class="h1">Comments</h1>
    </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">&nbsp;</h3>
        <div class="actions pull-right">
          <i class="fa fa-chevron-down"></i>
        </div>
      </div>
      <div class="panel-body">
        <%= form_tag site_url("admin/comments/bulk_update") do %>
          <table id="dtable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th class="checkboxth"><%= check_box_tag 'all', 'all', false, :id => 'check_all' %></th>
                <th>Article</th>
                <th>Comment</th>
                <th>Current Status</th>
                <th>Action</th>
                <th>&nbsp;</th>
              </tr>
            </thead>

            <tbody>
             <% @comments.each do |comment| %>
              <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

              <td><%= check_box_tag 'comments[]', comment.id %></td>
              <td>
                <%= link_to page_path(comment.post), :target => '_blank' do %>
                  <%= comment.post.post_title %>
                <% end %>
             
              </td>
              <td>
                <small>Comment submitted on:- <%= comment.submitted_on.strftime "%d-%m-%Y"%></small><br />
                <%= excerpt comment.comment, 50 %>
              </td>
              <td>

                <% if comment.comment_approved == 'Y' %>
                  Approved
                <% elsif comment.comment_approved == 'S' %>
                  Spam
                <% else %>
                  Unapproved
                <% end %>
                
              </td>
                <td class="center">
                  <%= link_to edit_admin_comment_path(comment), :class => '' do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                   <%= link_to mark_as_spam_admin_comment_path(comment), :class => '' do %>
                    <i class="fa fa-fire"></i>
                  <% end %>              
                  <%= link_to admin_comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' }, :class => '' do %>
                    <i class="fa fa-trash-o"></i>
                  <% end %>
                </td>
                <td class="center">
                  <% if comment.comment_approved == 'Y' %>
                    <i class="fa fa-check-circle"></i>
                  <% elsif comment.comment_approved == 'N' %>
                    <i class="fa fa-clock-o"></i>
                  <% else %>
                    <i class="fa fa-fire"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <hr>
          <%= bulk_update_dropdown Hash['unapprove' => 'Unapprove', 'approve' => 'Approve', 'mark_as_spam' => 'Mark as spam', 'destroy' => 'Destroy'] %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  
  $(document).ready(function(){
  });
  
</script>