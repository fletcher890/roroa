<%= form_tag site_url("admin/terms/bulk_update"), :style => 'margin-top:23px;' do %>
	<%= hidden_field_tag :type_taxonomy, @type %>

	<table id="dtable" class="table table-striped table-bordered" cellspacing="0" width="100%">
	<thead>
	  <tr>
	    <th class="hidden-xs"><%= check_box_tag 'all', 'all', false, :class => 'check_all' %></th>
	    <th><%= I18n.t("views.admin.terms.table.name") %></th>
	    <th class="hidden-xs"><%= I18n.t("views.admin.terms.table.slug") %></th>
	    <th class="center"><%= I18n.t("views.admin.terms.table.action") %></th>
	  </tr>
	</thead>
	<% (@type == 'category' ? Term::CATEGORIES : Term::TAGS).each do |term| %>
	  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

	    <td class="hidden-xs"><%= check_box_tag 'categories[]', term.id %></td>
		<td><%= term.name %></td>
		<td class="hidden-xs"><%= term.slug %></td>
	    <td class="center">
	      <div class="btn-group">
	        <%= link_to edit_admin_term_path(term) do %>
	          <i class="fa fa-pencil"></i>
	        <% end %>        
	        <%= link_to admin_term_path(term), method: :delete, data: { confirm: I18n.t("views.admin.generic.confirm") } do %>
	          <i class="fa fa-trash-o"></i>
	        <% end %>
	      </div>
	    </td>
	  </tr>
	<% end %>
	</table>
	<div class="hidden-xs">
		<hr>
		<%= bulk_update_dropdown Hash['destroy' => I18n.t("views.admin.generic.bulk_update_options.destroy")] %>
	</div>
<% end %>