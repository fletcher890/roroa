<div class="loadingSpinner"><div class="spinnerPostioner"><i class="fa fa-spinner fa-3x fa-spin"></i></div></div>
<div class="container-fluid">
	<div class="row-fluid">

		<% counter = 1
		@files.each do |file| %>  
			<% 

			if file.content_type == 'binary/octet-stream' || file.key.count('/').to_i > @slash_count.to_i
				if @initial.blank?   
					next
				end
				if file.content_type == 'binary/octet-stream'
					next
				end
			end

			%> 
			<div class="span3 <%= counter%5 == 0 ? 'first' : '' %>">
				<% if params[:manualBrowse] || params[:CKEditor] %>
					<div class="overlay">
						<%= file.key %>
						<img src="<%= download_url_for(file.key) %>" data-image="<%= download_url_for(file.key) %>" style="width:100%;float:left">
					</div>
				<% else %>
					<div class="overlay general">
						<% if file.content_type.include? 'image/' %>
							<img src="<%= download_url_for(file.key) %>" data-image="<%= download_url_for(file.key) %>" style="width:100%;float:left">
						<% else %>
							<i class="fa fa-file fa fa-file fa-5x" style="margin-top:10px;"></i>
							<div><%= file.key[file.key.rindex('/')+1..-1] %></div>
						<% end %>
					</div>
				<% end %>
				<div class="actions">
					<%= link_to download_url_for(file.key), :target => "_blank", 'data-key' => file.key do %>
						<i class="fa fa-eye" data-type-ref="<%= file.content_type %>"></i>
					<% end %>
					<%= link_to site_url("admin/filebrowser/delete/?file=" + file.key), 'data-key' => file.key do %>
						<i class="fa fa-trash-o" data-key="<%= file.key %>"></i>
					<% end %>

				</div>
			</div>  
		<% 
		counter = counter + 1
		end %>  
					
	</div>
	<div class="clearboth"></div>
</div>
