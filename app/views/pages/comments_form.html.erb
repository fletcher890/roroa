<% if type == 'F' %>

<div class="fb-comments" data-href="<%= site_url() %>" data-width="470" data-num-posts="10"></div>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>


<% else %>

    <% if flash[:notice] %>
      
      <p style="color:green"><%= flash[:notice] %></p>

    <% end %>

    <%= form_for [@comment] do |f| %>
      <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@comment.errors.count, "error") %> errors:</h2>

          <ul>
          <% @comment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <fieldset class="categoriesForm">

        <%= f.hidden_field :post_id, :value => @content.id %>

        <div class="field">
          <%= f.label :author %>
          <%= f.text_field :author, size: 40 %>
        </div>
        <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email, size: 40 %>
        </div>
        <div class="field">
          <%= f.label :website %>
          <%= f.text_field :website %>
        </div>
         <div class="field">
          <%= f.label :comment %>
          <%= f.text_area :comment %>
        </div>
        <div class="field">
            <%= f.submit "Submit Comment", :class => 'btn' %>
        </div>
      </fieldset>
    <% end %>

<% end %>