<div class="panel panel-primary animated">
  <div class="panel-heading">
      <div class="brandLogin"></div>    
  </div>
  <div class="panel-body">

    <% if !flash[:notice].blank? %>
      <p class="notice"><%= flash[:notice] %></p>
    <% elsif !flash[:error].blank? %>
      <p class="error"><%= flash[:error] %></p>
    <% elsif !flash[:alert].blank? %>
      <p class="error"><%= flash[:alert] %></p>
    <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { class: 'form-horizontal' }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="col-md-12">
            <%= f.text_field :login, autofocus: true, :placeholder => t('.placeholder_email'), :class => "form-control", :id => "email" %>
            <i class="fa fa-user"></i>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="form-group">
         <div class="col-md-12">
            <%= f.password_field :password, autocomplete: "off", :placeholder => t('.placeholder_password'), :class => "form-control", :id => "password" %>
            <i class="fa fa-lock"></i>
            <% if devise_mapping.rememberable? %>
              <br />
              <div class="help-block"><%= f.check_box :remember_me %> <small><%= t('.remember_me') %></small></div>
            <% end %>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <%= f.submit t('.sign_in'), :class => 'btn btn-primary btn-block' %>
          </div>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>

  </div>
</div>