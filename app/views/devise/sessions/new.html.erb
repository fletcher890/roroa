<div class="panel panel-primary animated">
    <div class="panel-heading">
        <div class="brandLogin"></div>    
    </div>
    <div class="panel-body">
       	
       	<p class="notice"><%= flash[:notice] %></p>
		<p class="error"><%= flash[:error] %></p>
        

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
	        <%= devise_error_messages! %>
            <div class="form-group">
                <div class="col-md-12">
                	<%= f.text_field :login, autofocus: true, :placeholder => "Email / Username", :class => "form-control", :id => "email" %>
                    <i class="fa fa-user"></i>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
               <div class="col-md-12">
	               	<%= f.password_field :password, autocomplete: "off", :placeholder => "Password", :class => "form-control", :id => "password" %>
                    <i class="fa fa-lock"></i>
                    <% if devise_mapping.rememberable? %>
	                    <br />
                    	<div class="help-block">
						      <%= f.check_box :remember_me %> <small><%= t('.remember_me', :default => "Remember me") %></small>
						</div>
					<% end %>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
               <div class="col-md-12">
	               	<%= f.submit t('.sign_in', :default => "Sign in"), :class => 'btn btn-primary btn-block' %>
                </div>
            </div>

        <% end %>
        <%= render "devise/shared/links" %>
    </div>
</div>