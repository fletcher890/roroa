<div class="panel panel-primary animated">
    <div class="panel-heading">
        <div class="brandLogin"></div>       
    </div>
    <div class="panel-body">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-horizontal' }) do |f| %>
		<%= devise_error_messages! %>
		<div class="form-group">
            <div class="col-md-12">
				<%= f.text_field :login, autofocus: true, autocomplete: "off", :placeholder => t('.placeholder'), :class => "form-control", :id => "email" %>
				<i class="fa fa-user"></i>
			</div>
		</div>
		<div class="form-group">
            <div class="col-md-12">
            	<%= f.submit t('.send_me_reset_password_instructions'), :class => 'btn btn-primary btn-block' %>
            </div>
        </div>
		<% end %>

		<%= render "devise/shared/links" %>
    </div>
</div>