<div class="panel panel-primary animated flipInY">
    <div class="panel-heading">
        <h3 class="panel-title">     
           Forgot your password?
        </h3>      
    </div>
    <div class="panel-body">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-horizontal' }) do |f| %>
		<%= devise_error_messages! %>
		<div class="form-group">
            <div class="col-md-12">
				<%= f.text_field :email, autofocus: true, autocomplete: "off", :placeholder => "Email / Username", :class => "form-control", :id => "email" %>
				<i class="fa fa-user"></i>
			</div>
		</div>
		<div class="form-group">
            <div class="col-md-12">
            	<%= f.submit "Send Email", :class => 'btn btn-primary btn-block' %>
            </div>
        </div>
		<% end %>

		<%= render "devise/shared/links" %>
    </div>
</div>