<div class="breadcrumbWrapper">
  <%= render_breadcrumbs %>
  <div class="clear"></div>
</div>

<div class="three_fourth">
	<% if !get_term_type.blank? %>
		<h1><%= get_term_type %> - <%= get_term_name %></h1>
	<% else %>
		<h1>News</h1>
	<% end %>

	<br>

	<% if !get_category_data.blank?

	 	get_category_data.each do |p| %>

	 		<div class="blog_article">
				<h2><a href="<%= get_the_permalink p %>"><%= get_the_title p %></a></h2>
	 			<span class="date"><%= get_the_date p %></span>
				<p><%= get_the_excerpt p %></p>
				<div class="clear"></div>
				<div class="divide"></div> 
			</div>

		<% end %>

	<% else %>
		
		<p>No posts match the criteria.</p>

	<% end %>

</div>
<div class="one_fourth last">

	<%= render 'theme/sidebar' %>
	
</div>

<div class="clear"></div>