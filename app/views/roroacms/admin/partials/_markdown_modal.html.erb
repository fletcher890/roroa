<div class="modal fade" id="mdModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%= t("views.admin.partials.markdown_modal.title") %></h4>
      </div>
      <div class="modal-body">
        <table class="table table-hover">
        <thead>
            <tr>
                <th><%= t("views.admin.partials.markdown_modal.table_heading_1") %></th>
                <th><%= t("views.admin.partials.markdown_modal.table_heading_2") %></th>
            </tr>
        </thead>
        <tbody>
           <tr>
                <td><%= t("views.admin.partials.markdown_modal.h1") %></td>
                <td><%= t("views.admin.partials.markdown_modal.h1_how") %></td>
            </tr>
            <tr>
                <td><%= t("views.admin.partials.markdown_modal.h2") %></td>
                <td><%= t("views.admin.partials.markdown_modal.h2_how") %></td>
            </tr>
            <tr>
                <td><%= t("views.admin.partials.markdown_modal.h3") %></td>
                <td><%= t("views.admin.partials.markdown_modal.h3_how") %></td>
            </tr>
            <tr>
                <td><strong><%= t("views.admin.partials.markdown_modal.bold") %></strong></td>
                <td><%= t("views.admin.partials.markdown_modal.bold_how") %></td>
            </tr>
            <tr>
                <td><em><%= t("views.admin.partials.markdown_modal.emphasize") %></em></td>
                <td><%= t("views.admin.partials.markdown_modal.emphasize_how") %></td>
            </tr>
            <tr>
                <td><%= t("views.admin.partials.markdown_modal.strike_through") %></td>
                <td><%= t("views.admin.partials.markdown_modal.strike_through_how") %></td>
            </tr>
            <tr>
                <td><a href="javascript:;"><%= t("views.admin.partials.markdown_modal.link") %></a></td>
                <td><%= t("views.admin.partials.markdown_modal.link_how") %></td>
            </tr>
            <tr>
                <td><%= t("views.admin.partials.markdown_modal.image") %></td>
                <td><%= t("views.admin.partials.markdown_modal.image_how") %></td>
            </tr>
            <tr>
                <td><%= t("views.admin.partials.markdown_modal.list") %></td>
                <td><%= t("views.admin.partials.markdown_modal.list_how") %></td>
            </tr>
        </tbody>
    </table>
      </div>
      <div class="modal-footer">
        <p class="pull-left"><%= t("views.admin.partials.markdown_modal.content") %> <a href="http://daringfireball.net/projects/markdown/syntax" target="_blank"><%= t("views.admin.generic.here") %></a>.</p>
      </div>
    </div>
  </div>
</div>