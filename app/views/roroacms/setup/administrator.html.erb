<div class="panel panel-primary animated">
  
  <div class="panel-heading">
      <div class="brandLogin"></div>    
  </div>
  <div class="panel-body">

  	<div class="row">

  		  <div class="col-md-12">

  		  	<div class="form-group col-md-12">
	  		  	<h2><%= @title %></h2>
	  		  	<hr>
	  		  	<p><%= t("views.admin.installation.content_two") %></p>
	  		  	<div class="clearfix"></div>
	  		  	<hr>
	  		  </div>

	  		  <%= form_for @admin, :url => create_user_setup_index_path do |f| %>

  		  		<div class="form-group">
	            <%= f.label :email, :class => "col-sm-3 control-label"  %>
	            <div class="col-sm-6">
	              <%= f.text_field :email, size: 40, :class => "form-control" %>
	              <%= errors_for @admin, :email %>
	            </div>
	            <div class="clearfix"></div>
	          </div>
	          <div class="form-group">
	            <%= f.label :username, :class => "col-sm-3 control-label"  %>
	            <div class="col-sm-6">
	              <%= f.text_field :username, size: 40, :class => "form-control" %>
	              <%= errors_for @admin, :username %>
	            </div>
	            <div class="clearfix"></div>
	          </div>
	 			<div class="form-group">
	            <%= f.label :password, :class => "col-sm-3 control-label"  %>
	            <div class="col-sm-6">
	              <%= f.password_field :password, :class => "form-control" %>
	              <%= errors_for @admin, :password %>
	            </div>
	            <div class="clearfix"></div>
	          </div>

	          <div class="form-group">
	            <%= f.label :password_confirmation, :class => "col-sm-3 control-label"  %>
	            <div class="col-sm-6">
	              <%= f.password_field :password_confirmation, :class => "form-control" %>
	              <%= errors_for @admin, :password_confirmation %>
	            </div>
	            <div class="clearfix"></div>
	          </div>


	            <div class="form-group">
	                <div class="col-sm-3">&nbsp;</div>
	                <div class="col-sm-6">
	                  <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i>&nbsp;<%= t("views.admin.generic.save_and_complete") %></button>
	                </div>
	                <div class="clearfix"></div>
	            </div>

			<% end %>

  		  </div>

  	</div>

  </div>

</div>